              "raw": "{{BASE_URL}}/events/slug/reuniao-da-equipe",
              "host": ["{{BASE_URL}}"],
              "path": ["events", "slug", "reuniao-da-equipe"]
            }
          }
        },
        {
          "name": "Create event",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('event_id', response.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
