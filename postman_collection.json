              "raw": "{{BASE_URL}}/events",
              "host": ["{{BASE_URL}}"],
              "path": ["events"]
            }
          }
        },
        {
          "name": "Get event by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/events/{{event_id}}",
              "host": ["{{BASE_URL}}"],
              "path": ["events", "{{event_id}}"]
            }
          }
