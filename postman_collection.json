            "url": {
              "raw": "{{BASE_URL}}/events/{{event_id}}",
              "host": ["{{BASE_URL}}"],
              "path": ["events", "{{event_id}}"]
            }
          }
        },
        {
          "name": "Delete event",
          "request": {
            "method": "DELETE",
            "header": [],
