            },
            "url": {
              "raw": "{{BASE_URL}}/events",
              "host": ["{{BASE_URL}}"],
              "path": ["events"]
            }
          }
        },
        {
          "name": "Update event",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Reunião Atualizada\",\n  \"description\": \"Nova descrição\"\n}"
